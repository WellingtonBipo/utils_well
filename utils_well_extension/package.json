{
  "name": "utils-well-extension",
  "displayName": "Utils Well",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "type": "commonjs",
  "scripts": {
    "install": "cd react_vite_ui && npm install",
    "build:react_vite_ui": "cd react_vite_ui && npm run build && cd .. && npm run build:tsc",
    "build:tsc": "npx tsc",
    "vscode:prepublish": "npm run compile",
    "compile": "npm run build:react_vite_ui && tsc -p ./",
    "watch": "npm run build:react_vite_ui && tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "contributes": {
    "configuration": {
      "title": "Utils Well",
      "properties": {
        "devUtilsWell.commands": {
          "description": "List of custom commands to show in the Utils Well view.",
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "command"
            ],
            "properties": {
              "label": {
                "type": "string",
                "description": "The display name of the command."
              },
              "command": {
                "type": "string",
                "description": "The terminal command to execute."
              },
              "ownTerminal": {
                "type": "boolean",
                "default": false,
                "description": "If the command should run in a own terminal instance."
              }
            }
          }
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devUtilsWell",
          "title": "Utils Well",
          "icon": "media/logo_light.svg"
        }
      ]
    },
    "views": {
      "devUtilsWell": [
        {
          "id": "devUtilsWell-commands",
          "name": "Commands",
          "icon": "media/logo_light.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "devUtilsWell.openUserSettings",
          "when": "view == devUtilsWell-commands",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "devUtilsWell.copyCommand",
          "when": "viewItem == devUtilsWell.runTerminalCommand",
          "group": "navigation@1"
        },
        {
          "command": "devUtilsWell.runCommand",
          "when": "viewItem == devUtilsWell.runTerminalCommand",
          "group": "navigation@2"
        },
        {
          "command": "devUtilsWell.copyCommand",
          "when": "viewItem == devUtilsWell.runTerminalCommand",
          "group": "inline@1"
        },
        {
          "command": "devUtilsWell.runCommand",
          "when": "viewItem == devUtilsWell.runTerminalCommand",
          "group": "inline@2"
        },
        {
          "command": "devUtilsWell.featureCreator",
          "when": "viewItem == devUtilsWell.featureCreator",
          "group": "inline@3"
        }
      ]
    },
    "commands": [
      {
        "category": "Utils Well",
        "command": "devUtilsWell.openUserSettings",
        "title": "Open User Settings",
        "icon": "$(gear)"
      },
      {
        "category": "Utils Well",
        "command": "devUtilsWell.copyCommand",
        "title": "Copy",
        "icon": "$(clippy)"
      },
      {
        "category": "Utils Well",
        "command": "devUtilsWell.runCommand",
        "title": "Run in Terminal",
        "icon": "$(terminal)"
      },
      {
        "category": "Utils Well",
        "command": "devUtilsWell.featureCreator",
        "title": "Feature Creator",
        "icon": {
          "light": "media/logo_light.svg",
          "dark": "media/logo_dark.svg"
        }
      }
    ]
  }
}